<h1>Listing steps</h1>

<table>
  <thead>
    <tr>
      <th>Instructions</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= step.instructions %></td>
        <td><%= link_to 'Show', [step.how_to, step] %></td>
        <td><%= link_to 'Edit', edit_how_to_step_path(@how_to, step) %></td>
        <td><%= link_to 'Destroy', [step.how_to, step], data: { confirm: 'Are you sure?' }, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

